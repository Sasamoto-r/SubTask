<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "SubTask App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right header-nav">
        <% if logged_in? %>
           <li><%= link_to "マイページ", current_user %></li>
           <li><%= link_to "投稿ページ", postpage_path %></li>
           <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "All Users", users_path %></li>
              <% if unchecked_notifications.any? %>
                  <i class="fa fa-circle" style="color: gold;"></i>
              <% end %>
              <li><%= link_to "通知", notifications_path, class: "btn-default"%></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
           </li>
           <%= form_tag(search_path,:method => 'get') do %>
             <%= text_field_tag :search, params[:search]  %><%= submit_tag '検索', :name => nil, class: "btn btn-primary search-btn" %>
           <% end %>
       
        <% else %>
          <li class="login"><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>